@model IEnumerable<KD12MVCDataAnnotation.Models.Calisan>

@{
    ViewData["Title"] = "CalisanListele";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>CalisanListele</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Ad
            </th>
            <th>
                Soyad
            </th>
            <th>
                Mail Adres
            </th>
            <th>
                Şifre
            </th>
            <th>
                Doğum Tarihi
            </th>
            <th>
                Role
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Ad
            </td>
            <td>
                @item.Soyad
            </td>
            <td>
                @item.EmailAdress
            </td>
            <td>
                @item.Sifre
            </td>
            <td>
                @item.DogumTarihi.ToShortTimeString();
            </td>
            <td>
                @item.Role
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
